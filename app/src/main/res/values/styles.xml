<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="JustProgressDialogFragment" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/white</item>
        <item name="justDefaultMessage">@string/loading</item>
        <item name="justDialogTitleStyle">@style/Title</item>
        <item name="justDialogMessageStyle">@style/Body</item>
        <item name="justDialogProgressColor">@color/colorAccent</item>
    </style>

    <style name="Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Body">
        <item name="android:textSize">14sp</item>
    </style>

</resources>
